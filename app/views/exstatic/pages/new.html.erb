<div id="errors_container" class="<%= @page.errors.count > 0 ? "" : "hidden" %> <%= @page.class.name.downcase %>_errors">
  <h2>
    <% if defined? heading %>
      <%= t(heading) %>
    <% else %>
      <%= t(:save_error) %>
    <% end %>
  </h2>
  <ul id="errors">
  <% @page.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
</div>

<h1>Create a Page</h1>
<%= form_for @page do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :slug %>
    <%= f.text_field :slug %>
  </div>
  <div>
    <%= f.label :content %>
    <%= f.text_field :content %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>
